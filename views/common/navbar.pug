mixin navbar(user)
 nav.navbar.navbar-expand.navbar-dark.bg-dark
  a(href="/", aria-label="A&D Progress").navbar-brand.mr-0.mr-md-2
   img(src="/images/ad-progress.svg", width="200", height="35")
  .collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item
        a.nav-link(href="/") Home
      li.nav-item
        a.nav-link(href="/leads") Leads
  .navbar-right
    if user
      span.navbar-text Hello #{user.email}!
  .navbar-right
    if !user
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(href="/signup") Sign up
        li.nav-item
          a.nav-link(href="/login") Login
    if user
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(href="/logout") Logout